<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="peripheral.joystick"
  version="1.0.0"
  name="Joystick Support"
  provider-name="Team-Kodi">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="kodi.peripheral" version="1.0.17"/>
  </requires>
  <extension
    point="kodi.peripheral"
    provides_joysticks="true"
    library_linux="peripheral.joystick.so"
    library_osx="peripheral.joystick.dylib"
    library_wingl="peripheral.joystick.dll"
    library_windx="peripheral.joystick.dll"
    library_android="libperipheral.joystick.so" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Kodi Joystick Library</summary>
    <description lang="en">This library provides joystick drivers and button maps. Multiple joystick APIs are supported, including DirectX, XInput, SDL and the Linux Joystick API.</description>
    <platform>all</platform>
    <noicon>true</noicon>
    <nofanart>true</nofanart>
  </extension>
</addon>
